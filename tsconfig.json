{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2023", "DOM"],
		"module": "ES2022",
		"target": "es2022",
		"moduleResolution": "Bundler",

		"rootDir": "./src",
		"outDir": "build",

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true
	}
}
